    .navbar-fixed
      nav
        .nav-wrapper
          span.brand-logo.center
            strong.flight-route(style="margin:0;") Flight  
          ul.left
            li
              a.back-button(href="index 3.html" style="font-size:2em;")
                img(src="img/ic_arrow_back.png" width="32px" height="auto" style="margin-top:0.35em;")
