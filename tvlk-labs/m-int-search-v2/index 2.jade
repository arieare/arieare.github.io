      .row.s12.flight-spec-input(style="padding:0.5em 16px !important;margin:0;")
        label(style="color:#8f8f8f;") Destination
        span(style="font-size:1.3em;display:block;") London (LONA)
        hr(style="width:100%;margin:0.5em auto;border-bottom:1px dashed #e5e5e5;")
      .row.s12.flight-spec-input(style="padding:0.5em 16px !important;margin:0;")
        label(style="color:#8f8f8f;") Departure Date
        span(style="font-size:1.3em;display:block;") Friday, 4 Mar 2016
        hr(style="width:100%;margin:0.5em auto;border-bottom:1px dashed #e5e5e5;")
      .row.s12.flight-spec-input(style="padding:0.5em 16px !important;margin:0;")
        label(style="color:#8f8f8f;") Return Date
        span(style="font-size:1.3em;display:block;") Friday, 11 Mar 2016
        hr(style="width:100%;margin:0.5em auto;border-bottom:1px dashed #e5e5e5;")
      .row.s12.flight-spec-input(style="padding:0.5em 16px !important;margin:0;")
        label(style="color:#8f8f8f;") Passenger
        span(style="font-size:1.3em;display:block;") 2 Adults
        hr(style="width:100%;margin:0.5em auto;border-bottom:1px dashed #e5e5e5;")
    .container      
      .row.s12.center-align
        a#btn-search-fight(href="index.html" style="width:auto;margin-left:8px;margin-right:8px;margin-bottom:0;") Search Flight